///////////////
public class MainActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        final LinearLayout lt = (LinearLayout) findViewById(R.id.lt);
        TextView b1 = (TextView) findViewById(R.id.b1);
        TextView b2 = (TextView) findViewById(R.id.b2);
        TextView b3 = (TextView) findViewById(R.id.b3);
        TextView b4 = (TextView) findViewById(R.id.b4);
        TextView b5 = (TextView) findViewById(R.id.b5);
        TextView b6 = (TextView) findViewById(R.id.b6);
        TextView b7 = (TextView) findViewById(R.id.b7);
        TextView b8 = (TextView) findViewById(R.id.b8);
        TextView b9 = (TextView) findViewById(R.id.b9);

        b1.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                lt.setBackgroundColor(getColor(R.color.red));
            }
        });

        b2.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                lt.setBackgroundColor(getColor(R.color.orange));
            }
        });

        b3.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                lt.setBackgroundColor(getColor(R.color.yellow));
            }
        });

        b4.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                lt.setBackgroundColor(getColor(R.color.green));
            }
        });

        b5.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                lt.setBackgroundColor(getColor(R.color.blue));
            }
        });

        b6.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                lt.setBackgroundColor(getColor(R.color.purple));
            }
        });

        b7.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                lt.setBackgroundColor(getColor(R.color.pink));
            }
        });

        b8.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                lt.setBackgroundColor(getColor(R.color.white));
            }
        });

        b9.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                lt.setBackgroundColor(getColor(R.color.black));
            }
        });
    }
}
